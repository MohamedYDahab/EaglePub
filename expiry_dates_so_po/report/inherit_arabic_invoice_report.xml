<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template inherit_id="arabic_taxable_invoice_knk.report_invoice_document"
              id="inherited_arabic_invoice_report_template">


        <xpath expr="//t/div[hasclass('page')]/table[1]/thead/tr[1]/td[3]" position="after">
            <td class="td-13 text-center table-border" width="60%">التكلفة</td>
        </xpath>

        <xpath expr="//t/div[hasclass('page')]/table[1]/thead/tr[2]/td[3]" position="after">
            <td class="td-13 text-center table-border">Cost</td>
        </xpath>


        <xpath expr="//t/div[hasclass('page')]/table[1]/thead/tr[1]/td[3]" position="after">
            <td class="td-13 text-center table-border" width="60%">الصلاحية</td>
        </xpath>

        <xpath expr="//t/div[hasclass('page')]/table[1]/thead/tr[1]/td[3]" position="after">
            <td class="td-13 text-center table-border" width="60%">اللوت</td>
        </xpath>

        <xpath expr="//t/div[hasclass('page')]/table[1]/thead/tr[2]/td[3]" position="after">
            <td class="td-13 text-center table-border">Expiry</td>
        </xpath>

        <xpath expr="//t/div[hasclass('page')]/table[1]/thead/tr[2]/td[3]" position="after">
            <td class="td-13 text-center table-border">Lot</td>
        </xpath>

        <xpath expr="//t/div[hasclass('page')]/div[hasclass('footer')]/table[1]/tbody/tr[4]/td[3]" position="replace">
            <td class="text-left black"
                style="background-color: #dfdfdf;border-bottom:1px solid;border-right: 1px solid;">
                <span>5%</span>
                <span>مبلغ الضريبة</span>
            </td>

        </xpath>

        <xpath expr="//t/div[hasclass('page')]/div[hasclass('footer')]/table[1]/tbody/tr[4]/td[2]" position="replace">
            <td class="text-right black"
                style="border-right: hidden;background-color: #dfdfdf;border-bottom:1px solid;">VAT
                Amount 5%
            </td>
        </xpath>

        <xpath expr="//t/div[hasclass('page')]/table[1]/tbody/t[4]/tr[1]/td[3]"
               position="after">
            <td class="td-13 text-center" width="60%" t-att-style="td_border_style">
                <t t-if="not l.display_type">
                    <div class="mt-2">
                        <span t-esc="l.cost_price"/>
                    </div>
                </t>
                <t t-else=""></t>
            </td>

        </xpath>


        <xpath expr="//t/div[hasclass('page')]/table[1]/tbody/t[4]/tr[1]/td[3]"
               position="after">
            <td class="td-13 text-center" width="60%" t-att-style="td_border_style">
                <t t-if="not l.display_type">
                    <div class="mt-2">
                        <span t-esc="l.expiry_date"/>
                    </div>
                </t>
                <t t-else=""></t>
            </td>

        </xpath>

        <xpath expr="//t/div[hasclass('page')]/table[1]/tbody/t[4]/tr[1]/td[3]"
               position="after">
            <td class="td-13 text-center" width="60%" t-att-style="td_border_style">
                <t t-if="not l.display_type">
                    <div class="mt-2">
                        <span t-esc="l.lot_name"/>
                    </div>
                </t>
                <t t-else=""></t>
            </td>

        </xpath>

    </template>

</odoo>
